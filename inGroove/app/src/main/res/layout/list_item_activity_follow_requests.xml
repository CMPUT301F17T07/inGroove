<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <!-- to implement in the future, add the users picture to the row -->
    <!-- <ImageView
        android:id="@+id/followerPicture"
        android:layout_width="45dp"
        android:layout_height="49dp"
        android:layout_weight="1.01"
        app:srcCompat="@android:drawable/btn_star" /> -->

    <TextView
        android:id="@+id/followerInfo"
        android:layout_width="221dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.01"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/acceptFollowRequestButton"
        android:contentDescription="@string/accept_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/rejectFollowRequestButton"
        android:contentDescription="@string/reject_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete" />

</LinearLayout>