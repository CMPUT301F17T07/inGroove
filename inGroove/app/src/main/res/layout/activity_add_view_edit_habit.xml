<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmput301f17t07.ingroove.avehabit.AddViewEditHabitActivity">


    <EditText
        android:id="@+id/ave_habit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/habit_name_hint"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/habit_comment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comment_header"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ave_habit_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="comment"
        android:inputType="textMultiLine"
        android:text="@string/comment_body_test" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/habit_events_header"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/ave_habit_events"
                android:layout_width="match_parent"
                android:layout_height="180dp">

            </ListView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/ave_log_event_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_habit_event" />

    <Button
        android:id="@+id/ave_stats_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_habit_stats" />

    <Button
        android:id="@+id/ave_interval_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_habit_interval" />

    <Button
        android:id="@+id/ave_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_habit" />

    <Button
        android:id="@+id/ave_del_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_habit" />


</LinearLayout>
