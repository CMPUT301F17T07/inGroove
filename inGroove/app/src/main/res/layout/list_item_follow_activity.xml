<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <!-- to implement in the future, add the users picture to the row -->
    <!-- <ImageView
        android:id="@+id/followerPicture"
        android:layout_width="45dp"
        android:layout_height="49dp"
        android:layout_weight="1.01"
        app:srcCompat="@android:drawable/btn_star" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_weight="0.97"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otherUsersInfo"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.97"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/otherUserStreak"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_weight="0.97"
            android:textSize="12sp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/sendFollowRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/send_request"
        app:srcCompat="@android:drawable/ic_input_add" />

</LinearLayout>